<package xmlns="http://schemas.microsoft.com/packaging/2010/07/nuspec.xsd">
  <metadata>
    <id>Mile.Json</id>
    <version>1.0.658.0</version>
    <description>The NuGet source code integration package version of JSON for Modern C++ with some utility functions</description>
    <authors>Kenji Mouri</authors>
    <projectUrl>https://github.com/ProjectMile/Mile.Json</projectUrl>
    <requireLicenseAcceptance>false</requireLicenseAcceptance>
    <license type="file">License.md</license>
    <readme>ReadMe.md</readme>
    <repository type="git" url="https://github.com/ProjectMile/Mile.Json.git" />
  </metadata>
  <files>
  
    <file src="..\Mile.Json\**\*.*" target="Source\Native" />

    <file src="Mile.Json.props" target="build\native" />
    <file src="Mile.Json.targets" target="build\native" />

    <file src="..\ReadMe.md" target="." />
    <file src="..\License.md" target="." />
    <file src="..\ReleaseNotes.md" target="." />

  </files>
</package>